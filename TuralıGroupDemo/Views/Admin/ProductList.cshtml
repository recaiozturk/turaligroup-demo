
@model TuralıGroupDemo.Models.ProductListModel

@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ürünleri Yönet</h1>
<hr />

@if (Model.Products.Count() > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Id</td>
                <td>Ürün İsmi</td>
                <td>Alış Fiyatı</td>
                <td>Satış Fiyatı</td>
                <td>İskonto(%)</td>
                <td>KDV(%)</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name </td>
                <td>@item.PurchasePrice </td>
                <td>@item.SalePrice </td>
                <td>@item.Discount</td>
                <td>@item.KDV</td>
                <td>
                    <a class="btn btn-primary btn-sm mr-2" href="/admin/EditProduct/@item.Id">Edit</a>

                    <form action="/admin/DeleteProduct" method="post" style="display:inline">
                        <input type="hidden" name="productId" value="@item.Id" />
                        <button type="submit" class="btn btn-danger btn-sm ">Delete</button>
                    </form>
                </td>
            </tr>
            }



        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h4>No Products</h4>
    </div>
}


