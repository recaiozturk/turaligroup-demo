
@model TuralıGroupDemo.Models.CaseModel

@{
    ViewBag.Title = "CreateCase";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1> Create Cases</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="" method="post">



            <div class="form-group row">
                <label class="col-md-2 col-form-label">Kasa İsmi </label>
                <div class="col-md-10">
                    <input name="Name" value="" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">Bakiye </label>
                <div class="col-md-10">
                    <input name="Balance" value="" class="form-control" />
                </div>
            </div>

            



            <div class="form-group row">

                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Save Case</button>
                </div>
            </div>

        </form>
    </div>
</div>

