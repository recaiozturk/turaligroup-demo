
@model TuralıGroupDemo.Models.ClientModel

@{
    ViewBag.Title = "EditClient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> Edit Client</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="Edit" method="post">

            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="form-group row">
                <label class="col-md-2 col-form-label">Name</label>
                <div class="col-md-10">
                    <input name="Name" value="@Model.Name" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">Surname</label>
                <div class="col-md-10">
                    <input name="Surname" value="@Model.Surname" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">Password</label>
                <div class="col-md-10">
                    <input name="Password" value="@Model.Password" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">Phone</label>
                <div class="col-md-10">
                    <input name="Phone" value="@Model.Phone" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">City</label>
                <div class="col-md-10">
                    <input name="City" value="@Model.City" class="form-control" />
                </div>
            </div>



            <div class="form-group row">

                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Save Client</button>
                </div>
            </div>

        </form>
    </div>
</div>

