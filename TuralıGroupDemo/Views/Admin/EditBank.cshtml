
@model TuralıGroupDemo.Models.BankModel

@{
    ViewBag.Title = "EditBank";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> Edit Bank</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="" method="post">



            <div class="form-group row">
                <label class="col-md-2 col-form-label">Banka ismi </label>
                <div class="col-md-10">
                    <input name="Name" value="@Model.Name" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">Bakiye </label>
                <div class="col-md-10">
                    <input name="Balance" value="@Model.Balance" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">Vade-Ekstra</label>
                <div class="col-md-10">
                    <input name="Extra" value="@Model.Extra" class="form-control" />
                </div>
            </div>



            <div class="form-group row">

                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Save Bank</button>
                </div>
            </div>

        </form>
    </div>
</div>

