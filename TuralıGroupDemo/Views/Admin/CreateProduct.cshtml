
@model TuralıGroupDemo.Models.ProductModel

@{
    ViewBag.Title = "CreateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> Create Product</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="CreateCategory" method="post">



            <div class="form-group row">
                <label class="col-md-2 col-form-label">Ürün İsmi </label>
                <div class="col-md-10">
                    <input name="Name" value="" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">Alış Fiyatı </label>
                <div class="col-md-10">
                    <input name="PurchasePrice" value="" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">Satış Fiyatı </label>
                <div class="col-md-10">
                    <input name="SalePrice" value="" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">İskonto (%)</label>
                <div class="col-md-10">
                    <input name="Discount" value="" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">KDV (%)</label>
                <div class="col-md-10">
                    <input name="KDV" value="" class="form-control" />
                </div>
            </div>






            <div class="form-group row">

                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Save Client</button>
                </div>
            </div>

        </form>
    </div>
</div>



