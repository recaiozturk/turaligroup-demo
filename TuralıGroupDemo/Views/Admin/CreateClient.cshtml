
@model TuralıGroupDemo.Models.ClientModel

@{
    ViewBag.Title = "CreateClient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> Müşteri Oluştur</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="" method="post">



            <div class="form-group row">
                <label class="col-md-2 col-form-label">Name </label>
                <div class="col-md-10">
                    <input name="Name" value="" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">Surname </label>
                <div class="col-md-10">
                    <input name="Surname" value="" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">Password </label>
                <div class="col-md-10">
                    <input name="Password" value="" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">Phone </label>
                <div class="col-md-10">
                    <input name="Phone" value="" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">City </label>
                <div class="col-md-10">
                    <input name="City" value="" class="form-control" />
                </div>
            </div>






            <div class="form-group row">

                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Save Client</button>
                </div>
            </div>

        </form>
    </div>
</div>

