
@model TuralıGroupDemo.Models.ProductModel

@{
    ViewBag.Title = "EditProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> Edit Product</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="Edit" method="post">

            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="form-group row">
                <label class="col-md-2 col-form-label">Ürün İsmi</label>
                <div class="col-md-10">
                    <input name="Name" value="@Model.Name" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">Alış Fiyatı</label>
                <div class="col-md-10">
                    <input name="PurchasePrice" value="@Model.PurchasePrice" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">Satış Fiyatı</label>
                <div class="col-md-10">
                    <input name="SalePrice" value="@Model.SalePrice" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">İskonto(%)</label>
                <div class="col-md-10">
                    <input name="Discount" value="@Model.Discount" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">KDV(%)</label>
                <div class="col-md-10">
                    <input name="KDV" value="@Model.KDV" class="form-control" />
                </div>
            </div>



            <div class="form-group row">

                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Save Product</button>
                </div>
            </div>

        </form>
    </div>
</div>


